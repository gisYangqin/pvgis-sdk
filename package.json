{
	"name": "pv-gis-libs",
	"scripts": {
		"start:core": "pnpm run --filter @pv-arcgis/core dev ",
		"build:core": "pnpm run --filter @pv-arcgis/core build",
		"doc:core": "pnpm run doc --filter @pvgis/core",
		"start:services": "pnpm run --filter @pv-arcgis/services dev",
		"build:services": "pnpm run --filter @pv-arcgis/services build",
		"doc:services": "pnpm run doc --filter @pvgis/services",
		"start:utils": "pnpm run dev --filter @pvgis/utils",
		"start-zoomto:utils": "pnpm run --filter @pv-arcgis/utils dev-zoomto",
		"build:utils": "pnpm run build --filter @pvgis/utils",
		"doc:utils": "pnpm run --filter @pv-arcgis/utils doc",
		"lint": "eslint packages",
		"lint:fix": "eslint packages --fix",
		"prepare": "husky install",
		"test:core": "node scripts/test.js -p core",
		"test:services": "node scripts/test.js -p services",
		"test:utils": "node scripts/test.js -p utils",
		"coverage:core": "node scripts/test.js --coverage -p core",
		"coverage:services": "node scripts/test.js --coverage -p services",
		"coverage:utils": "node scripts/test.js --coverage -p utils",
		"majestic": "majestic"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.4",
		"@commitlint/config-conventional": "^16.2.4",
		"@darkobits/lolcatjs": "^3.1.5",
		"@types/arcgis-js-api": "^4.23.1",
		"@types/jest": "^27.5.0",
		"@typescript-eslint/eslint-plugin": "^5.22.0",
		"@typescript-eslint/parser": "^5.22.0",
		"eslint": "^8.14.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"figlet": "^1.5.2",
		"husky": "^7.0.4",
		"jest": "^28.1.0",
		"jest-environment-jsdom": "^28.1.0",
		"lerna": "^4.0.0",
		"microbundle": "^0.15.0",
		"minimist": "^1.2.6",
		"ora": "4.0.4",
		"parcel": "^2.6.2",
		"prettier": "^2.6.2",
		"simple-git-hooks": "^2.7.0",
		"ts-jest": "^28.0.2",
		"typedoc": "^0.22.15",
		"typescript": "^4.6.4"
	}
}
